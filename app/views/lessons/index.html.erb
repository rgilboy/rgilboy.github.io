<div>
  <div>
    <h1>
      List of all lessons
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new lesson
    </h2>

    <form action="/insert_lesson" method="post">
      <div>
        <label for="content_box">
          Content
        </label>

        <input type="text" id="content_box" name="query_content">
      </div>

      <div>
        <label for="skill_id_box">
          Skill
        </label>

        <input type="text" id="skill_id_box" name="query_skill_id">
      </div>

      <button>
        Create lesson
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Content
        </th>

        <th>
          Skill
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_lessons.each do |a_lesson| %>
      <tr>
        <td>
          <%= a_lesson.id %>
        </td>

        <td>
          <%= a_lesson.content %>
        </td>

        <td>
          <%= a_lesson.skill_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_lesson.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_lesson.updated_at) %> ago
        </td>

        <td>
          <a href="/lessons/<%= a_lesson.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
