<div>
  <div>
    <h1>
      Like #<%= @the_like.id %> details
    </h1>

    <div>
      <div>
        <a href="/likes">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_like/<%= @the_like.id %>">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Fan
      </dt>
      <dd>
        <%= @the_like.fan %>
      </dd>

      <dt>
        Skill
      </dt>
      <dd>
        <%= @the_like.skill %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit like
    </h2>

    <form action="/modify_like/<%= @the_like.id %>"  method="post" >
      <div>
        <label for="fan_box">
          Fan
        </label>

        <input type="text" id="fan_box" name="query_fan" value="<%= @the_like.fan %>">
      </div>

      <div>
        <label for="skill_box">
          Skill
        </label>

        <input type="text" id="skill_box" name="query_skill" value="<%= @the_like.skill %>">
      </div>

      <button>
        Update like
      </button>
    </form>
  </div>
</div>

<hr>
