<div>
  <div>
    <h2>
      Add a new skill
    </h2>
    <form action="/insert_skill" method="post">
      <div>
        <label for="skill_name_box">
          Skill name
        </label>

        <input type="text" id="skill_name_box" name="query_skill_name">
      </div>

      <div>
        <label for="skill_description_box">
          Skill description
        </label>

        <input type="text" id="skill_description_box" name="query_skill_description">
      </div>

      <button>
        Create skill
      </button>
    </form>
  </div>
</div>


<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          User
        </th>

        <th>
          Skill name
        </th>

        <th>
          Skill description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_skills.each do |a_skill| %>
      <tr>

        <td>
          <%= a_skill.user.username %>
        </td>

        <td>
          <%= a_skill.skill_name %>
        </td>

        <td>
          <%= a_skill.skill_description %>
        </td>

        <td>
          <%= time_ago_in_words(a_skill.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_skill.updated_at) %> ago
        </td>

        <td>
          <a href="/skills/<%= a_skill.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
