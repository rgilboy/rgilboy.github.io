<div>
  <div>
    <h1>
      List of all skills
    </h1>
  </div>
</div>

<hr>


<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          User
        </th>

        <th>
          Skill name
        </th>

        <th>
          Skill description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>

      </tr>

      <% @list_of_skills.each do |a_skill| %>
      <tr>

        <td>
          <%= a_skill.user.username %>
        </td>

        <td>
          <%= a_skill.skill_name %>
        </td>

        <td>
          <%= a_skill.skill_description %>
        </td>

        <td>
          <%= time_ago_in_words(a_skill.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_skill.updated_at) %> ago
        </td>

        <td>
          <a href="/skills/<%= a_skill.id %>">
            Show details
          </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
